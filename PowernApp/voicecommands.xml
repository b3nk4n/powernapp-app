  <CommandSet xml:lang="en-GB" Name="commandsENGB">

    <CommandPrefix>Power nap</CommandPrefix>
    <Example>for 20 minutes</Example>

    <Command Name="startNap">
      <Example>for 20 minutes</Example>
      <ListenFor>[for] {minute} [minutes]</ListenFor>
      <Feedback>Turning alarm on</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="stopNap">
      <Example>Cancel nap</Example>
      <ListenFor>Cancel [nap]</ListenFor>
      <ListenFor>Stop [nap]</ListenFor>
      <Feedback>Turning alarm off</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="checkAlarmTime">
      <Example>When is my alarm set for?</Example>
      <ListenFor>When is my alarm set [for]?</ListenFor>
      <Feedback>I have a look</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="checkRemainingTime">
      <Example>What is the remaining time?</Example>
      <ListenFor>[What] [is] [the] remaining time?</ListenFor>
      <ListenFor>How much time is left?</ListenFor>
      <Feedback>I have a look</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="extendAlarmTime">
      <Example>5 more minutes</Example>
      <ListenFor>[give me] {minute} more [minutes]</ListenFor>
      <ListenFor>extend by {minute} [minutes]</ListenFor>
      <Feedback>Extending alarm time by {minute} minutes</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

